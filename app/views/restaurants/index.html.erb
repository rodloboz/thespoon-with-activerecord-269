<h1>Restaurants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Stars</th>
    <th>Actions</th>
  </tr>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.stars %></td>
        <td>
          <%= link_to 'Show', restaurant_path(restaurant) %> |
          <%= link_to 'Edit', edit_restaurant_path(restaurant) %> |
          <%= link_to 'Delete', restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add a New Restaurant', new_restaurant_path %>
